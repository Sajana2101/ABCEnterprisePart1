@model List<string>

@{
    ViewData["Title"] = "Contracts";
}

<img src="~/images/contracts.jpg" 
     id="background-image"
     style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            object-fit: cover; z-index: -1;" 
     alt="Background Image" />


<h1>Contract</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">➕ Upload New Contract</a>
</p>

@if (Model.Count == 0)
{
    <p>No files uploaded yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>File Name</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file</td>
                    <td>
                       
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
