@model IEnumerable<ABCEnterprisePart1.Models.Order>

@{
    ViewData["Title"] = "Orders";
}



<img src="~/images/backgroundorders.jpg" 
     id="background-image"
     style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            object-fit: cover; z-index: -1;" 
     alt="Background Image" />




<div style="
    width: 100%;                        
    background-color: rgba(0,0,0,0.6);  
    padding: 30px 0;                     
    text-align: center;                  
    margin-bottom: 30px;                
">
    <h2 style="
        font-family: 'Didot', serif;
        font-size: 2.5rem;
        letter-spacing: 2px;
        font-weight: 400;
        color: white;
        margin: 0;
    ">
        Orders
    </h2>
    <p style="
        font-family: 'Didot', serif;
        font-size: 1.2rem;
        color: #f0f0f0;
        margin-top: 10px;
    ">
        Make it yours forever
    </p>
</div>


<p>
    <a asp-action="Create" class="btn btn-dark">➕ Add Order</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
           
           
            <th>Product</th>
            <th>Customer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>

                <td>@order.ProductName</td>
                <td>@order.CustomerName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-dark btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.RowKey" class="btn btn-dark btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.RowKey" class="btn btn-dark btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
