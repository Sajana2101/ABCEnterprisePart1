@model ABCEnterprisePart1.Models.Order

@{
    ViewData["Title"] = "Edit";
}


<h2 style="font-family: 'Didot', serif; font-size: 2rem; letter-spacing: 2px; font-weight: 400;" class="text-center mb-4">
    Edit
</h2>
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="RowKey" />

            <div class="form-group">
                <label asp-for="CustomerName"></label>
                <select asp-for="CustomerName" asp-items="ViewBag.CustomerList" class="form-control">
                    <option value="">-- Select Customer --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ProductName"></label>
                <select asp-for="ProductName" asp-items="ViewBag.ProductList" class="form-control">
                    <option value="">-- Select Product --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

