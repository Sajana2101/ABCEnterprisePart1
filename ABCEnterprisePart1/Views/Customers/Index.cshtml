@model IEnumerable<ABCEnterprisePart1.Models.Customer>

   
<img src="~/Images/customersbackground.png" 
     id="background-image"
     style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            object-fit: cover; z-index: -1;" 
     alt="Background Image" />



<div class="page-background">
   
    <section class="text-center py-6" style="background: rgba(255,255,255,0.8);">
        <h2 class="display-5 fw-light" style="font-family: 'Didot', serif; letter-spacing: 1.5px;">
            Meet Our Most Distinguished Clients
        </h2>
        <p class="lead text-muted mt-3" style="max-width: 600px; margin: 0 auto;">
            Discover the list of highly acclaimed and celebrated customers all around the world who trust us. Elegance, sophistication, and style, all in one place.
        </p>

    </section>

    
    <div class="text-center my-6">
        <a asp-action="Create" class="btn btn-dark btn-lg">Add Customer</a>
    </div>

   
    <div class="container py-6">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var customer in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@customer.CustomerName</h5>
                            <p class="card-text mb-1"><strong>Email:</strong> @customer.CustomerEmail</p>
                            <p class="card-text mb-3"><strong>Phone:</strong> @customer.CustomerPhone</p>
                            <div class="mt-auto d-flex flex-wrap gap-2">
                                <a asp-action="Details" asp-route-id="@customer.RowKey" class="btn btn-dark btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@customer.RowKey" class="btn btn-dark btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@customer.RowKey" class="btn btn-dark btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
